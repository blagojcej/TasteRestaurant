@page
@model TasteRestaurant.Pages.FoodTypes.EditModel

<br />
<h2>Edit Food Type</h2>
<hr />

<form method="post">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FoodType.Id" />
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="FoodType.Name" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="FoodType.Name" class="form-control" />
            </div>
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-sm btn-primary" value="Update" />
            <a asp-page="Index" class="btn btn-sm btn-success">Back To List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
