@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@foreach (var category in Model.IndexVM.CategoryTypes)
{
    <h3 style="padding-left: 50px;" class="text-success">@category.Name</h3>
    <div class="row">
        <div class="col-sm-12">
            @* Partial View *@
            @Html.Partial("_ThumbnailAreaPartial", Model.IndexVM.MenuItems.Where(c => c.CategoryType.Name.Equals(category.Name)))
        </div>
    </div>
}
